public class SquarePattern {
    public static void main(String[] args) {
        int rows = 4; // Number of rows in the pattern
        int number = 1; // Starting number

        for (int i = 1; i <= rows; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print((number * number) + "\t");
                number++;
            }
            System.out.println();
        }
    }
}
  
